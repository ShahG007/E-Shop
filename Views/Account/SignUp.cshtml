@model EShop.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/style.css" type="text/css">

    <title>SignUp</title>

    <script src="~/scripts/jquery-1.10.2.min.js" type="text/javascript"></script>

</head>
<body>
    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="col-sm-1">
                        <h2 class="or">New User SignUp!</h2>
                    </div>
                    <div class="signup-form">
                        <!--sign up form-->
                        <script src="~/scripts/2.js"></script>
                        @using (Html.BeginForm("register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {


                            @Html.TextBoxFor(model => model.FirstName, new { @placeholder = "First Name", @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.FirstName)
                            @Html.TextBoxFor(model => model.LastName, new { @placeholder = "Last Name", @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.LastName)
                            @Html.TextBoxFor(model => model.UserName, new { @placeholder = "User Name", @class = "form-control", @required = "required", @id = "UserName" })
                            @Html.ValidationMessageFor(model => model.UserName)
                            <input type="button" id="b1" value="Check" />

                            <div id="checking">Checking...</div>
                                <div id="result"></div>
                            @Html.TextBoxFor(model => model.Age, new { @placeholder = "Age", @class = "form-control", @required = "required"})
                            @Html.ValidationMessageFor(model => model.Age)
                           

                                @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email...", @class = "form-control", @required = "required"})
                                @Html.ValidationMessageFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Password, new { type = "password", @placeholder = "Password", @class = "form-control", @required = "required"})
                                @Html.ValidationMessageFor(model => model.Password)
                                @Html.TextBoxFor(model => model.SecretQuestion, new { @placeholder = "Secret Question", @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.SecretQuestion)
                                @Html.TextBoxFor(model => model.SecretAnswer, new { @placeholder = "Secret Password", @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.SecretAnswer)
                                @Html.Label("Profile")
                                @Html.TextBoxFor(model => model.ProfilePhoto, new { @placeholder = "Profile Photo", type = "file" })
                                @Html.ValidationMessageFor(model => model.ProfilePhoto)
                                <button type="submit" class="btn btn-default">SignUp !!</button>

                        }

                        
                    </div>
                    
                    <!--/sign up form-->

                </div>

            </div>
        </div>
    </section>
    
    <!--/form-->

</body>
</html>
