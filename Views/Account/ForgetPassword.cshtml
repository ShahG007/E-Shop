@model  EShop.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgetPassword</title>
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css">
    <script src="~/scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
</head>
<body>

    <script src="~/scripts/1.js"></script>

    <section id="form">

        <!--form-->

        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="col-sm-1">
                        <h2 class="or">Forget Password</h2>
                        <div class="col-sm-1">
                            <div class="login-form">

                                @using (Html.BeginForm("resetPassword", "Account", FormMethod.Post))
                                {
                                    <fieldset>
                                    <div id="editor-field">
                                    @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Enter User Name", @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.UserName)
                                     </div>
                                    <input type="button" id="b1" value="Check" />
                                    <div id="checking"> Retrieving Data...</div>

                                    <div id="question"></div>
                                        <div id="editor-field">
                                            @Html.TextBoxFor(model => model.SecretAnswer, new { @placeholder = "Answer the Secret Question", @required = "required" })
                                            @Html.ValidationMessageFor(model => model.SecretAnswer)
                                        </div>
                                            <a href="~/Account/SignUp"> Do not have an acount! Sign Up</a>
                                            <button type="submit" class="btn btn-default" id="log">Submit</button>
                                    </fieldset>
                                        
                                 }


                            </div>

                            <!--/login form-->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--/form-->

</body>
</html>
