@model EShop.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <title>Login</title>
</head>
<body>


    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="col-sm-1">
                        <h2 class="or">Login to your account</h2>
                        <div class="col-sm-1">
                            <div class="login-form">
                                <!--login form-->
                                @using (Html.BeginForm("login", "Account", FormMethod.Post))
                                {   

                                    <fieldset>
                                        <div class="editor-field">
                                            @Html.TextBoxFor(model => model.UserName, new { @placeholder = "User Name", @class = "form-control", @required = "required" })
                                        </div>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.Password, new { @placeholder = "Password" })
                                            </div>
                                                <span>
                                                    <input type="checkbox" class="checkbox" id="cblog">
                                                    Keep Me Signed In !!
                                                </span>
                                        <br>
                                                <a href="~/Account/forgetpassword">Forget Password</a>
                                                <a href="~/Admin/homepage">If you are Admin then click here !!</a>
                                                <br>
                                                <button type="submit" class="btn btn-default" id="log">Login</button>
</fieldset>
                                }


                            </div><!--/login form-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!--/form-->

</body>
</html>
